<%- include("_header") -%>
  <h1>Customer Export</h1>

  <h4>Total number of records in the database: <%= totRecs %>
  </h4>

  <h4>Enter a file name and click "Export Customers"</h4>

  <form action="/export" method="post">
    <p>
      <label for="filename">File Name</label>
      <input type="text" name="filename" id="filename" required placeholder="export.text">
    </p>
    <input type="submit" id="submit" value="Export Customer">
  </form>
  <% if(message.substring(0,5)==="Error" ) { %>
    <h2>Error!</h2>
    <p>
      <%= message %>
    </p>
    <% } %>
      <%- include("_footer") -%>