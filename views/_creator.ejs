<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cusid">ID</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="cusid" value="<%= cust.cusid %>" required />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cusfname">First Name</label>
  <div class="col-sm-7">
    <input class="form-control" name="cusfname" value="<%= cust.cusfname %>" required />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cuslname">Last Name</label>
  <div class="col-sm-7">
    <input class="form-control" name="cuslname" value="<%= cust.cuslname %>" required />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cusstate">State</label>
  <div class="col-sm-7">
    <input class="form-control" name="cusstate" value="<%= cust.cusstate %>" pattern="[A-Za-z]{2}" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cussalesytd">Sales YTD</label>
  <div class="col-sm-7">
    <input class="form-control" name="cussalesytd" value="<%= cust.cussalesytd %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="cussalesprev">Previous Years Sales</label>
  <div class="col-sm-7">
    <input class="form-control" name="cussalesprev" value="<%= cust.cussalesprev %>" />
  </div>
</div>